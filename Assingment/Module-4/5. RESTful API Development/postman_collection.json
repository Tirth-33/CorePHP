{
  "info": {
    "name": "Product Inventory API",
    "description": "RESTful API for managing products in inventory",
    "schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json"
  },
  "item": [
    {
      "name": "Get All Products",
      "request": {
        "method": "GET",
        "header": [
          {
            "key": "Accept",
            "value": "application/json"
          }
        ],
        "url": {
          "raw": "{{base_url}}/api/products",
          "host": ["{{base_url}}"],
          "path": ["api", "products"]
        }
      }
    },
    {
      "name": "Create Product",
      "request": {
        "method": "POST",
        "header": [
          {
            "key": "Accept",
            "value": "application/json"
          },
          {
            "key": "Content-Type",
            "value": "application/json"
          }
        ],
        "body": {
          "mode": "raw",
          "raw": "{\n  \"name\": \"Sample Product\",\n  \"description\": \"This is a sample product\",\n  \"price\": 29.99,\n  \"quantity\": 100,\n  \"sku\": \"PROD-001\"\n}"
        },
        "url": {
          "raw": "{{base_url}}/api/products",
          "host": ["{{base_url}}"],
          "path": ["api", "products"]
        }
      }
    },
    {
      "name": "Get Single Product",
      "request": {
        "method": "GET",
        "header": [
          {
            "key": "Accept",
            "value": "application/json"
          }
        ],
        "url": {
          "raw": "{{base_url}}/api/products/1",
          "host": ["{{base_url}}"],
          "path": ["api", "products", "1"]
        }
      }
    },
    {
      "name": "Update Product",
      "request": {
        "method": "PUT",
        "header": [
          {
            "key": "Accept",
            "value": "application/json"
          },
          {
            "key": "Content-Type",
            "value": "application/json"
          }
        ],
        "body": {
          "mode": "raw",
          "raw": "{\n  \"name\": \"Updated Product Name\",\n  \"price\": 39.99,\n  \"quantity\": 150\n}"
        },
        "url": {
          "raw": "{{base_url}}/api/products/1",
          "host": ["{{base_url}}"],
          "path": ["api", "products", "1"]
        }
      }
    },
    {
      "name": "Delete Product",
      "request": {
        "method": "DELETE",
        "header": [
          {
            "key": "Accept",
            "value": "application/json"
          }
        ],
        "url": {
          "raw": "{{base_url}}/api/products/1",
          "host": ["{{base_url}}"],
          "path": ["api", "products", "1"]
        }
      }
    }
  ],
  "variable": [
    {
      "key": "base_url",
      "value": "http://localhost:8000"
    }
  ]
}